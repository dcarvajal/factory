{
  "name": "@ivoryio/kogaio",
  "version": "0.1.99",
  "author": "Ivory",
  "description": "Ivory Component Library",
  "main": "build/index.js",
  "module": "build/index.js",
  "license": "ISC",
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/ivoryio/factory#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ivoryio/factory/tree/master/packages/kogaio"
  },
  "bugs": {
    "url": "https://github.com/ivoryio/factory/issues"
  },
  "scripts": {
    "start": "react-scripts start",
    "styleg": "npx styleguidist server --config src/config/styleguide.config.js",
    "build:styleg": "npx styleguidist build --config src/config/styleguide.config.js",
    "build:lib": "NODE_ENV=production && rm -rf build && mkdir build && npx babel ./src/lib --out-dir ./build --ignore \"**/*.test.js\" --copy-files",
    "publish:lib": "cp package.json build && cp README.md build && cd ./build && yarn publish --access public",
    "lint": "node_modules/.bin/eslint ./",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "cz-conventional-changelog": "^2.1.0",
    "eslint-plugin-babel": "^5.3.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.4",
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "react-scripts": "^2.1.0",
    "react-styleguidist": "^8.0.6",
    "styled-components": "^4.1.3"
  },
  "dependencies": {
    "styled-system": "^3.2.1"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "babel": {
    "presets": [
      "react",
      "env",
      "stage-2"
    ]
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "git add ."
    ]
  }
}
